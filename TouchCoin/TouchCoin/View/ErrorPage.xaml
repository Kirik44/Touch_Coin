<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouchCoin.View.ErrorPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="25">
            <Label Text="Ошибка!" HorizontalOptions="CenterAndExpand" FontSize="24" TextColor="Black"/>
            <Label Text="Произошла неизвестная ошибка" HorizontalOptions="CenterAndExpand" x:Name="label" FontSize="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>